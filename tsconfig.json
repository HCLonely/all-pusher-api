{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types/",
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "esnext",
    "baseUrl": "./",
    "allowJs": true,
    "downlevelIteration":true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
