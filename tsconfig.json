{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "allowJs": true,
    "downlevelIteration":true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
